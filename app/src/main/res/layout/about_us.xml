<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutUs">

    <!--    content-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                >
                <!--    Header-->
                <ImageView
                    android:id="@+id/headerVictor"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:contentDescription="@string/header"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_victor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                    <!--    main card-->
                <LinearLayout
                    android:id="@+id/mainCard"
                    android:layout_width="match_parent"
                    android:layout_height="730dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/upper_redius"
                    android:elevation="@dimen/shadow"
                    android:gravity="top"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/motive"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/manu_txt"
                        android:fontFamily="@font/text_font"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:justificationMode="inter_word"
                        android:text="@string/about_des"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/form_txt"
                        android:fontFamily="@font/text_font"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ibdc_small"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="5dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="@string/founder"
                            android:fontFamily="@font/text_font"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/tab_label"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    finished content-->

</LinearLayout>