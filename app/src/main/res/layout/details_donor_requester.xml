<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/square_border"
    android:padding="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:layout_height="320dp">

    <ImageView
        android:id="@+id/bloodImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:src="@drawable/ibdc_logo_tns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#45000000"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/detailFullName"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contextClickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/varela_round"
                android:singleLine="true"
                android:text="@string/developer_name"
                android:textColor="@color/white"
                android:textSize="@dimen/card_header_txt"
                android:elevation="@dimen/minor_shadow"
                />

            <TextView
                android:id="@+id/detailBloodGroup"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/varela_round"
                android:singleLine="true"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="O+"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/card_header_txt"
                android:textStyle="bold"
                android:elevation="@dimen/minor_shadow"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bloodImg_url"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:id="@+id/detailVillage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/varela_round"
                    android:maxWidth="210dp"
                    android:singleLine="true"
                    android:text="pakshey"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_txt"
                    android:elevation="@dimen/minor_shadow"
                    android:tooltipText="Tooltip" />

                <TextView
                    android:id="@+id/detailTehsil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/varela_round"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                    android:text="Ishwardi"
                    android:elevation="@dimen/minor_shadow"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_txt" />

                <TextView
                    android:id="@+id/detailDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/varela_round"
                    android:maxWidth="110dp"
                    android:singleLine="true"
                    android:text="pabna"
                    android:textColor="@color/white"
                    android:elevation="@dimen/minor_shadow"
                    android:textSize="@dimen/card_txt" />

                <TextView
                    android:id="@+id/detailState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:elevation="@dimen/minor_shadow"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/varela_round"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="120dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Rajshahi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_txt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/lastDonate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/varela_round"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:elevation="@dimen/minor_shadow"
                    android:text="@string/last_donate"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_txt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="15dp"
                    android:elevation="@dimen/minor_shadow"
                    android:background="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/lastDonateDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/varela_round"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                    android:elevation="@dimen/minor_shadow"
                    android:text="@string/last_donate_date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/card_txt" />


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


    <ImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_share_24"
        android:tooltipText="Share"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/call"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/bloodImg_url"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="252dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_baseline_call_24"
        android:tooltipText="Call"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/bloodImg_url"
        app:layout_constraintTop_toTopOf="@+id/bloodImg_url"
        app:layout_constraintVertical_bias="0.047" />

</androidx.constraintlayout.widget.ConstraintLayout>