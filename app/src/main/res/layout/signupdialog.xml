<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/tns"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_textbox"
        android:elevation="@dimen/shadow"
        android:padding="@dimen/_5dp"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_40dp"
            android:src="@drawable/ibdc_logo_tns"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/shadow"
            android:fontFamily="@font/des_font"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@string/sign_up"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/manu_txt" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:background="@color/colorAccentDark"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="vertical">
            <!--        name-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_weight="1"
                android:hint="@string/first_name">

                <EditText
                    android:id="@+id/gName"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints=""
                    android:background="@drawable/text_box_border_coustom"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/background_dark"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/profile_txt" />

            </com.google.android.material.textfield.TextInputLayout>
<!--            Email-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_weight="1"
                android:hint="@string/Email">

                <EditText
                    android:id="@+id/gEmail"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints=""
                    android:background="@drawable/text_box_border_coustom"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/background_dark"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/profile_txt" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_20dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:weightSum="2">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:text="@string/cancel"
                    android:textSize="@dimen/card_txt"
                    android:elevation="@dimen/shadow"
                    android:textColor="@color/colorPrimary"
                    />

                <Button
                    android:id="@+id/ok_Btn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:textSize="@dimen/card_txt"
                    android:elevation="@dimen/shadow"
                    android:text="@string/sign_up"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>