<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

<!--    Profile tab-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">
        <!--    for background images-->
        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:contentDescription="@string/cover"
            android:scaleType="centerCrop"
            android:src="@drawable/ibdc_logo" />

        <View
            android:id="@+id/cover_shed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/semi_tns_background"
            app:layout_constraintBottom_toBottomOf="@+id/cover_image"
            app:layout_constraintEnd_toEndOf="@+id/cover_image"
            app:layout_constraintStart_toStartOf="@+id/cover_image"
            app:layout_constraintTop_toTopOf="@+id/cover_image" />
        <!--    for background images-->

        <!--details box-->
        <LinearLayout
            android:id="@+id/info_box"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/semi_tns_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/cover_shed"
            app:layout_constraintEnd_toEndOf="@+id/cover_shed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/cover_shed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                >

                <TextView
                    android:id="@+id/email_key"
                    android:layout_width="0dp"
                    android:layout_weight=".38"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:elevation="@dimen/minor_shadow"
                    android:fontFamily="@font/varela_round"
                    android:maxWidth="210dp"
                    android:singleLine="true"
                    android:text="@string/Email_bn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/form_txt" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".06"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/white"
                    android:textSize="@dimen/form_txt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email_pro"
                    android:layout_width="0dp"
                    android:layout_weight="1.54"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:elevation="@dimen/minor_shadow"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/varela_round"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="120dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/Email_bn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/form_txt" />

            </LinearLayout>


            <!--        info box-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <!--            address box-->
                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1.05"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:paddingTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!--                Address key's-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".85"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Village_key"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:elevation="@dimen/minor_shadow"
                            android:fontFamily="@font/varela_round"
                            android:maxWidth="210dp"
                            android:singleLine="true"
                            android:text="@string/village"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />


                        <TextView
                            android:id="@+id/upazila_key"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:elevation="@dimen/minor_shadow"
                            android:fontFamily="@font/varela_round"
                            android:maxWidth="210dp"
                            android:singleLine="true"
                            android:text="@string/upazila"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />


                        <TextView
                            android:id="@+id/district_key"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:elevation="@dimen/minor_shadow"
                            android:fontFamily="@font/varela_round"
                            android:maxWidth="210dp"
                            android:singleLine="true"
                            android:text="@string/district"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />


                        <TextView
                            android:id="@+id/division_key"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:elevation="@dimen/minor_shadow"
                            android:fontFamily="@font/varela_round"
                            android:maxWidth="210dp"
                            android:singleLine="true"
                            android:text="@string/divisions"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />

                    </LinearLayout><!--                Address key's-->

                    <!--                Colon's-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".05"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt"
                            android:textStyle="bold" />
                    </LinearLayout><!--                Colon's-->

                    <!--                address value's-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1.10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/village_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/minor_shadow"
                            android:fontFamily="@font/varela_round"
                            android:maxWidth="210dp"
                            android:singleLine="true"
                            android:text="@string/vil_txt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />

                        <TextView
                            android:id="@+id/tehsil_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/minor_shadow"
                            android:fontFamily="@font/varela_round"
                            android:maxWidth="120dp"
                            android:singleLine="true"
                            android:text="@string/upa_txt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />

                        <TextView
                            android:id="@+id/district_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/minor_shadow"
                            android:fontFamily="@font/varela_round"
                            android:maxWidth="110dp"
                            android:singleLine="true"
                            android:text="@string/dis_txt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />

                        <TextView
                            android:id="@+id/state_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:contextClickable="true"
                            android:elevation="@dimen/minor_shadow"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/varela_round"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxWidth="120dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="@string/div_txt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />



                    </LinearLayout><!--                address value's-->


                </LinearLayout><!--            address box-->

                <!--            lastDonateBox-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".95"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1.8">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:layout_marginEnd="1dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/lastDonate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:contextClickable="true"
                            android:elevation="@dimen/minor_shadow"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/varela_round"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="@string/last_donate"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="15dp"
                            android:background="@color/colorPrimary"
                            android:elevation="@dimen/minor_shadow" />

                        <TextView
                            android:id="@+id/lastDonateDate_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:contextClickable="true"
                            android:elevation="@dimen/minor_shadow"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/varela_round"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="@string/last_donate_date"
                            android:textColor="@color/white"
                            android:textSize="@dimen/form_txt" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:text="@string/edit_profile"
                            android:visibility="visible" />


                    </LinearLayout>

                </LinearLayout><!--            lastDonateBox-->

            </LinearLayout><!--        info box-->


        </LinearLayout><!--details box-->

        <!--title box-->
        <LinearLayout
            android:id="@+id/title_header_box"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/semi_tns_background"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cover_shed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/cover_shed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.650">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ibdc_logo" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/title_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/name_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/f_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/text_font"
                        android:text="@string/first_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/card_header_txt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/l_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/text_font"
                        android:text="@string/last_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/form_txt"
                        android:textStyle="bold" />

                </LinearLayout><!--            nameBox-->


                <TextView
                    android:id="@+id/mobile_number_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/text_font"
                    android:text="@string/mobile_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/form_txt"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/blood_grp_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/text_font"
                    android:text="@string/blood_group"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/manu_txt"
                    android:textStyle="bold" />

            </LinearLayout><!--        title_box-->


        </LinearLayout><!--title box-->

    </androidx.constraintlayout.widget.ConstraintLayout><!--    Profile tab-->


<!--    profile edit tab-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_edit_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_edit"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ibdc_logo" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/p_image_shade_edit"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/edit_photo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.516"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="300dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:background="@drawable/round_textbox"
                    android:elevation="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:weightSum="8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="@string/first_name"
                        android:textColorHint="#000000"
                        app:hintTextColor="#000000">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/f_name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textCapWords"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="@string/last_name"
                        android:textColorHint="#000000"
                        app:hintTextColor="#000000">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="@string/village"
                        android:textColorHint="#000000"
                        app:hintTextColor="#000000">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="@string/upazila"
                        android:textColorHint="#000000"
                        app:hintTextColor="#000000">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="@string/district"
                        android:textColorHint="#000000"
                        app:hintTextColor="#000000">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="@string/divisions"
                        android:textColorHint="#000000"
                        app:hintTextColor="#000000">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:hint="@string/last_donate"
                        android:textColorHint="#000000"
                        app:hintTextColor="#000000">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>


                        <Button
                            android:id="@+id/save_btn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/save_profile"
                            />

                        <Button
                            android:id="@+id/update_btn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:text="@string/update_profile"
                            />


                </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- TODO: Update blank fragment layout -->


</LinearLayout><!--main tag-->